<div id="wrapper">
    <h1>Articles</h1>
    <div id="articles">
        {{#each articles}}

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.snipText}}</p>
                <p class="card-text">{{this.comments}}</p>
                <div class="form-group">
                    <label for="userComment">Leave a comment</label>
                    <input type="text" class="form-control" id="userComment" placeholder="Leave a comment">
                </div>
                <button href="#" class="btn btn-success" data-id="{{this._id}}">Add Comment</button>
            </div>
        </div>

        {{/each}}
    </div>
    <div id="notes"></div>
</div>